# backend/user-service/Dockerfile.aws - VERSIÓN CON FIX BASE.PY
FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# 1. COPIAR todo
COPY backend/user-service/requirements.txt .
COPY shared-libraries/ /app/shared-libraries/
COPY backend/user-service/src/ ./src/
COPY backend/user-service/*.py ./

# 2. Primero instalar pydantic==2.5.0 específico
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir "pydantic[email]==2.5.0" "pydantic-settings>=2.0.0"

# 3. Instalar shared-libraries
WORKDIR /app/shared-libraries
RUN pip install --no-cache-dir -e .

# 4. FIX: Crear base.py si no existe (compatibilidad)
RUN cd /app/shared-libraries/hduce_shared/database && \
    if [ ! -f base.py ]; then \
        echo "from .postgres import Base" > base.py && \
        echo "__all__ = [\"Base\"]" >> base.py && \
        echo " base.py creado para compatibilidad"; \
    fi

# 5. Instalar el resto de dependencias de user-service
WORKDIR /app
RUN pip install --no-cache-dir -r requirements.txt

# 6. Configurar PYTHONPATH
ENV PYTHONPATH=/app:/app/shared-libraries:`$PYTHONPATH

EXPOSE 8001

HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8001/health || exit 1

CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8001"]
