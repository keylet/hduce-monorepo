# backend/metrics-service/Dockerfile.aws
# Build: docker build -f backend/metrics-service/Dockerfile.aws -t hduce-metrics:aws .

FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y \
    gcc \
    curl \
    && rm -rf /var/lib/apt/lists/*

# 1. COPIAR shared-libraries
COPY shared-libraries/ /app/shared-libraries/
WORKDIR /app/shared-libraries
RUN pip install -e .

# 2. COPIAR c√≥digo del metrics-service
WORKDIR /app
COPY backend/metrics-service/requirements.txt .
COPY backend/metrics-service/*.py ./

# 3. Instalar dependencias
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# 4. Configurar PYTHONPATH
ENV PYTHONPATH=/app:/app/shared-libraries:$PYTHONPATH

EXPOSE 8005

HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8005/health || exit 1

CMD ["python", "main.py"]
