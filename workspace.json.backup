    "auth-service": {
      "root": "backend/auth-service",
      "sourceRoot": "backend/auth-service",
      "projectType": "application",
      "targets": {
        "serve": {
          "executor": "nx:run-commands",
          "options": {
            "command": "uvicorn main:app --host 0.0.0.0 --port 8000 --reload",
            "cwd": "{projectRoot}"
          }
        },
        "build-docker": {
          "executor": "nx:run-commands",
          "options": {
            "command": "docker build -t hduce/auth-service:latest .",
            "cwd": "{projectRoot}"
          }
        },
        "test": {
          "executor": "nx:run-commands",
          "options": {
            "command": "pytest",
            "cwd": "{projectRoot}"
          }
        }
      },
